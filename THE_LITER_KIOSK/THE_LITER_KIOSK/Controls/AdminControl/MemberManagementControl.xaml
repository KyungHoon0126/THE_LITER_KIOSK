<UserControl x:Class="THE_LITER_KIOSK.Controls.AdminControl.MemberManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:THE_LITER_KIOSK.Controls.AdminControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <DataGrid x:Name="dgMemeberList"
                  AutoGenerateColumns="False"
                  AreRowDetailsFrozen="False"
                  CanUserAddRows="False"
                  CanUserResizeRows="False"
                  ItemsSource="{Binding MemeberItems}">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="아이디"
                                    Binding="{Binding Id}"/>
                <DataGridTextColumn Header="이름"
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="QrCode"
                                    Binding="{Binding QrCode}"/>
                <DataGridTextColumn Header="BarCode"
                                    Binding="{Binding BarCode}"/>
            </DataGrid.Columns>
        </DataGrid>        
    </Grid>
</UserControl>
