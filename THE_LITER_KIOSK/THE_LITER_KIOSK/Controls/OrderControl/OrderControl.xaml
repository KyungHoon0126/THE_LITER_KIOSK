<UserControl x:Class="THE_LITER_KIOSK.Controls.OrderControl.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:THE_LITER_KIOSK.Controls.OrderControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5">
                <ListView x:Name="lvCategory"
                          ItemsSource="{Binding CategoryItems}"
                          SelectionChanged="lvCategory_SelectionChanged">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="5">
                                <TextBlock Text="{Binding CategoryName}" 
                                           HorizontalAlignment="Center"
                                           Background="AliceBlue"
                                           TextAlignment="Center" 
                                           Height="50" Width="100"/>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <ListView x:Name="lvMenuList"
                          ItemsSource="{Binding MenuItems}"
                          HorizontalAlignment="Center"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!--<WrapPanel/>-->
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Image Source="{Binding ImageUrl}" Height="100" Width="130"/>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Price}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Row="2" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button x:Name="btnPrevious"
                            Content="&lt; 이전"
                            Height="50" Width="200"
                            FocusVisualStyle="{x:Null}"/>
                </Grid>

                <Grid Grid.Column="1">

                </Grid>

                <Grid Grid.Column="2">
                    <Button x:Name="btnNext"
                            Content="다음 &gt;"
                            Height="50" Width="200"
                            FocusVisualStyle="{x:Null}"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            
        </Grid>
    </Grid>
</UserControl>
