<base:CustomControlModel  xmlns:base="clr-namespace:THE_LITER_KIOSK.UIManager" 
             x:Class="THE_LITER_KIOSK.Controls.OrderControl.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:THE_LITER_KIOSK.Controls.OrderControl"
             xmlns:converter="clr-namespace:THE_LITER_KIOSK.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converter:MenuCategoryToKoreanConverter x:Key="MenuCategoryToKoreanConverter"/>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5">
                <ListView x:Name="lvCategory" Height="75" 
                          ItemsSource="{Binding CategoryItems}"
                          HorizontalAlignment="Center"
                          BorderBrush="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          SelectionChanged="lvCategory_SelectionChanged">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <!--<Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>-->
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="5">
                                <Grid>
                                    <Border CornerRadius="1" 
                                            BorderThickness="20" 
                                            BorderBrush="#e0e0e0">
                                        <TextBlock Text="{Binding CategoryName, Converter={StaticResource MenuCategoryToKoreanConverter}}" 
                                                   Background="#e0e0e0"
                                                   FontSize="15">
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <ListView x:Name="lvMenuList"
                          ItemsSource="{Binding PagingMenuList}"
                          SelectedItem="{Binding SelectedMenu}"
                          HorizontalAlignment="Center"
                          SelectionChanged="lvMenuList_SelectionChanged"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" Rows="4"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="MaxHeight" Value="410"/> <!--메뉴가 적은 경우 최대 높이를 지정.-->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="20"/>
                                    </Style>
                                </StackPanel.Resources>
                                <Image Source="{Binding ImageUrl}"/>
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Price, StringFormat={}{0}원}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Row="2" Margin="5">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="Width" Value="180"/>
                        <Setter Property="Background" Value="#e0e0e0"/>
                    </Style>
                </Grid.Resources>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button x:Name="btnPreviousMenu"
                            Content="&lt; 이전"
                            Background="#e6e6e6"
                            BorderBrush="Transparent"
                            FontSize="20"
                            FontWeight="SemiBold"
                            IsEnabled="{Binding PreviousBtnIsEnabled}"
                            Command="{Binding PreviousMenuCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Grid Grid.Column="1">

                </Grid>

                <Grid Grid.Column="2">
                    <Button x:Name="btnNextMenu"
                            Content="다음 &gt;"
                            Background="#e6e6e6"
                            BorderBrush="Transparent"
                            FontSize="20"
                            FontWeight="SemiBold"
                            IsEnabled="{Binding NextBtnIsEnabled}"
                            Command="{Binding NextMenuCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        
        
        <Grid Grid.Column="1" Margin="0,0,50,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ListView x:Name="lvOrderList" Margin="5" 
                                  FontSize="20" Foreground="Black"
                                  ItemsSource="{Binding OrderedMenuItems}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            
                            <ListView.View>
                                <GridView>
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="Background" Value="#e0e0e0"/>
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>

                                    <GridViewColumn Header="메뉴" Width="360">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}"
                                                           Margin="5"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="수량" Width="260">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button x:Name="btnAddMenu"
                                                                Content="+"
                                                                Margin="5"
                                                                Width="20"
                                                                Click="btnAddMenu_Click"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}"/>

                                                        <TextBlock Text="{Binding Count}"
                                                                   Margin="5"/>

                                                        <Button x:Name="btnSubMenu"
                                                                Content="-" 
                                                                Margin="5"
                                                                Width="20"
                                                                Click="btnSubMenu_Click"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="가격" Width="260">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding TotalPrice, StringFormat=\{0:N0\}원}"
                                                                   Margin="5"/>
                                                        <Button x:Name="btnDel"
                                                                Content="x"
                                                                Width="20"
                                                                Margin="5"
                                                                Click="btnDel_Click"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="30"/>
                                    <Setter Property="FontFamily" Value="AppleSDGothicNeoSB00"/>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="총가격 : "/>
                            <TextBlock Text="{Binding OrderTotalPrice, StringFormat=\{0:N0\}원}"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Button x:Name="btnClearOrderList"
                            Content="모두삭제"
                            HorizontalAlignment="Right"
                            FontWeight="SemiBold"
                            Background="#404040"
                            Style="{DynamicResource btnCommonStyle}"
                            Click="btnClearOrderList_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,30">
                    <Button x:Name="btnMoveToHome"
                            Margin="5"
                            Content="이전"
                            Background="#008575"
                            Style="{DynamicResource btnCommonStyle}"
                            Click="btnMoveToHome_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnOrder"
                            Margin="5"
                            Content="주문하기"
                            Background="#008575"
                            Style="{DynamicResource btnCommonStyle}"
                            Click="btnOrder_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</base:CustomControlModel>
